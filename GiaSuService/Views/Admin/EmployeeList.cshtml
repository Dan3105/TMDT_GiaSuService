@using GiaSuService.Models.AdminViewModel
@model IEnumerable<EmployeeListViewModel>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.FullName)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.LockStatus)</th>
            <th>Image</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.Email</td>
                <td>
                    @if (item.LockStatus)
                    {
                        <span class="text-danger">Tạm đóng</span>
                    }
                    else
                    {
                        <span class="text-success">Họat động</span>
                    }
                </td>
                <td>
                    <img src="@item.ImageUrl" alt="@item.FullName" style="width: 50px; height: 50px;" />
                </td>
                <td>
                    
                    <a href="@Url.Action("EmployeeProfile", "Admin", new {id = item.Id})">
                        <i class="fas fa-edit"></i>
                    </a>
                    
                </td>
            </tr>
        }
    </tbody>
</table>
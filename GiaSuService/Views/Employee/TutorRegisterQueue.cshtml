@using GiaSuService.Models.EmployeeViewModel
@model IEnumerable<TutorRegisterViewModel>
@{
    ViewData["Title"] = "Danh sách yêu cầu tạo tài khoản gia sư";
}
<h1>Danh sách yêu cầu tạo tài khoản gia sư</h1>
<div class="container">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Tên đầy đủ</th>
                <th>Trường học</th>
                <th>Chuyên ngành</th>
                <th>Trình độ hiện tại</th>
                <th>Trạng thái yêu cầu</th>
                <th>Ngày tạo</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody id="items-container">
        </tbody>
    </table>

    <div id="pagination">
        <button id="prev-page" class="border-0">
            <i class="fas fa-chevron-left px-2"></i>
        </button>
        <span id="current-page" class="px-2">Trang 1</span>
        <button id="next-page" class="border-0"><i class="fas fa-chevron-right px-2"></i></button>
    </div>
</div>

<script>
    $(document).ready(function () {
        var currentPage = 0;

        function loadItems(pageNumber) {
            $.getJSON("/Employee/GetTutorRegisterQueue", { page: pageNumber })
                .done(function (data) {
                    $("#items-container").empty(); // Clear existing items

                    // Update page information
                    $("#current-page").text(`Trang ${data.page + 1}`);
                    console.log(data.page, data.totalPages);
                    // Disable "Next Page" button if at the last page
                    $("#next-page").prop("disabled", data.page + 1 === data.totalPages);
                    $("#prev-page").prop("disabled", data.page === 0);
                    currentPage = data.page;
                    // Dynamically add items to the view
                    $.each(data.queries, function (index, item) {
                        //console.log(item);
                        var itemHtml = `
                                    <tr>
                                <td>${item.fullName}</td>
                                <td>${item.college}</td>
                                <td>${item.area}</td>
                                <td>${item.currentStatus}</td>
                                <td>${item.statusQuery}</td>
                                <td>${item.createDate}</td>
                                <td>
                                        <a href="/Employee/TutorProfileQueue?id=${item.id}">
                                        <i class="fas fa-edit"></i>
                                    </a>

                                </td>
                            </tr>
                                `;
                        $("#items-container").append(itemHtml);
                    });
                });
        }

        // Load initial page
        loadItems(currentPage);

        // Handle "Next Page" button click
        $("#next-page").click(function () {
            if (!$(this).prop("disabled")) {
                currentPage++;
                loadItems(currentPage);
            }
        });

        // (Optional) Handle "Previous Page" button click (implement similar logic)
        $("#prev-page").click(function () {
            if (!$(this).prop("disabled")) {
                currentPage--;
                loadItems(currentPage);
            }
        });
    });
</script>
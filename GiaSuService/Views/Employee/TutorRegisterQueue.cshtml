@using GiaSuService.Models.EmployeeViewModel
@model IEnumerable<TutorRegisterViewModel>

<div class="container">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>College</th>
                <th>Area</th>
                <th>Current Status</th>
                <th>Status Query</th>
                <th>Create Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody id="items-container">
        </tbody>
    </table>

    <div id="pagination">
        <button id="prev-page" disabled>Previous Page</button>
        <span id="current-page">Page 1</span>
        <button id="next-page">Next Page</button>
    </div>
</div>

<script>
    $(document).ready(function () {
        var currentPage = 0;

        function loadItems(pageNumber) {
            $.getJSON("/Employee/GetTutorRegisterQueue", { page: pageNumber })
                .done(function (data) {
                    $("#items-container").empty(); // Clear existing items

                    // Update page information
                    $("#current-page").text(`Page ${data.page + 1}`);

                    // Disable "Next Page" button if at the last page
                    $("#next-page").prop("disabled", data.page === data.totalPages);
                    $("#prev-page").prop("disabled", data.page === 0);
                    // Dynamically add items to the view
                    $.each(data.queries, function (index, item) {
                        //console.log(item);
                        var itemHtml = `
                                    <tr>
                                <td>${item.fullName}</td>
                                <td>${item.college}</td>
                                <td>${item.area}</td>
                                <td>${item.currentStatus}</td>
                                <td>${item.statusQuery}</td>
                                <td>${item.createDate}</td>
                                <td>
                                        <a href="/Employee/TutorProfileQueue?id=${item.id}">
                                        <i class="fas fa-edit"></i>
                                    </a>

                                </td>
                            </tr>
                                `;
                        $("#items-container").append(itemHtml);
                    });
                });
        }

        // Load initial page
        loadItems(currentPage);

        // Handle "Next Page" button click
        $("#next-page").click(function () {
            if (!$(this).prop("disabled")) {
                currentPage++;
                loadItems(currentPage);
            }
        });

        // (Optional) Handle "Previous Page" button click (implement similar logic)
        $("#prev-page").click(function () {
            if (!$(this).prop("disabled")) {
                currentPage--;
                loadItems(currentPage);
            }
        });
    });
</script>
@using System.Security.Claims;
@using GiaSuService.Configs;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GiaSuService</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GiaSuService.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/bar.css" />
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
</head>
<body>
    @{
        bool isAuth = User.Identity?.IsAuthenticated ?? false;
        var roleName = isAuth ? User.Claims.FirstOrDefault(p => p.Type == ClaimTypes.Role)?.Value : "";
    }
    <div class="page-wrapper chiller-theme toggled">
        <a id="show-sidebar" class="btn btn-sm btn-dark" href="#">
            <i class="fas fa-bars"></i>
        </a>
        <nav id="sidebar" class="sidebar-wrapper">
            <div class="sidebar-content">
                <div class="sidebar-brand">
                    <a href="#">pro sidebar</a>
                    <div id="close-sidebar">
                        <i class="fas fa-times"></i>
                    </div>
                </div>
                <div class="sidebar-header">
                    <div class="user-pic">
                        <img class="img-responsive img-rounded" src="https://media.tenor.com/RtmcggFXF04AAAAe/cat-kitten.png"
                             alt="User picture">
                    </div>
                    <div class="user-info">
                        <span class="user-name">
                            Jhon
                            <strong>Smith</strong>
                        </span>
                        <span class="user-role">Administrator</span>
                        <span class="user-status">
                            <i class="fa fa-circle"></i>
                            <span>Online</span>
                        </span>
                    </div>
                </div>
                <!-- sidebar-header  -->
                @if (roleName != AppConfig.EMPLOYEEROLENAME)
                {
                    <div class="sidebar-menu">

                        <ul>
                            <li class="header-menu">
                                <span>Phụ Huynh</span>
                            </li>
                            <li class="sidebar">
                                <a href="#">
                                    <i class="fa fa-tachometer-alt"></i>
                                    <span>Đăng ký tìm gia sư</span>
                                </a>

                            </li>
                            <li class="sidebar">
                                <a href="#">
                                    <i class="fa fa-tachometer-alt"></i>
                                    <span>Học phí tham khảo</span>
                                </a>

                            </li>
                            <li class="header-menu">
                                <span>Gia sư</span>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="fa fa-book"></i>
                                    <span>Đăng ký làm gia sư</span>
                                    @* <span class="badge badge-pill badge-primary">Beta</span> *@
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="fa fa-calendar"></i>
                                    <span>Lớp Mới cần gia sư</span>
                                </a>
                            </li>
                        </ul>

                    </div>
                }
                @if(roleName == AppConfig.EMPLOYEEROLENAME)
                {
                    <div class="sidebar-menu">
                        <ul>
                            <li class="header-menu">
                                <span>Nhân viên</span>
                            </li>
                            <li class="sidebar">
                                <a href="#">
                                    <i class="fa fa-tachometer-alt"></i>
                                    <span>Danh sách gia sư</span>
                                </a>

                            </li>
                            <li class="sidebar">
                                <a href="#">
                                    <i class="fa fa-tachometer-alt"></i>
                                    <span>Đơn đăng ký gia sư</span>
                                    <span class="badge badge-pill badge-danger">10</span>
                                </a>
                            </li>
                            <li class="sidebar">
                                <a href="#">
                                    <i class="fa fa-tachometer-alt"></i>
                                    <span>Đơn đăng ký lớp học</span>
                                    <span class="badge badge-pill badge-danger">10</span>
                                </a>
                            </li>
                            <li class="sidebar">
                                <a href="#">
                                    <i class="fa fa-tachometer-alt"></i>
                                    <span>Tình trạng kiến nghị lớp học</span>
                                    <span class="badge badge-pill badge-danger">10</span>
                                </a>
                            </li>
                        </ul>
                    </div>

                }
                
                @if(roleName == AppConfig.ADMINROLENAME)
                {
                    <div class="sidebar-menu">
                        <ul>
                            <li class="header-menu">
                                <span>Admin</span>
                            </li>
                            <li class="sidebar">
                                <a href="#">
                                    <i class="fa fa-tachometer-alt"></i>
                                    <span>Danh sách nhân viên</span>
                                </a>

                            </li>
                            <li class="sidebar">
                                <a href="#">
                                    <i class="fa fa-tachometer-alt"></i>
                                    <span>Tạo nhân viên</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                }
                
                @if(isAuth)
                {
                    <div class="sidebar-menu">
                        <ul>
                            <li class="header-menu">
                                <span>Tài khoản</span>
                            </li>
                            <li class="sidebar">
                                <a href="#">
                                    <i class="fa fa-tachometer-alt"></i>
                                    <span>Thông tin tài khoản</span>
                                </a>

                            </li>
                            <li class="sidebar">
                                <a href="@Url.Action("Logout", "Identity")">
                                    <i class="fa fa-tachometer-alt"></i>
                                    <span>Đăng xuất</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <div class="sidebar-menu">
                        <ul>
                            <li class="header-menu">
                                <span>Tài khoản</span>
                            </li>
                            <li class="sidebar">
                                <a href="@Url.Action("Index", "Identity")">
                                    <i class="fa fa-tachometer-alt"></i>
                                    <span>Đăng nhập tài khoản</span>
                                </a>

                            </li>
                        </ul>
                    </div>
                }

                <!-- sidebar-menu  -->
            </div>
            <!-- sidebar-content  -->
            <div class="sidebar-footer">
                <a href="#">
                    <i class="fa fa-bell"></i>
                    <span class="badge badge-pill badge-warning notification">3</span>
                </a>
                <a href="#">
                    <i class="fa fa-envelope"></i>
                    <span class="badge badge-pill badge-success notification">7</span>
                </a>
                <a href="#">
                    <i class="fa fa-cog"></i>
                    <span class="badge-sonar"></span>
                </a>
                <a href="#">
                    <i class="fa fa-power-off"></i>
                </a>
            </div>
        </nav>
        <!-- sidebar-wrapper  -->
        <main class="page-content">
            <div class="container-fluid">
                <div class="container">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            </div>

            <!-- page-wrapper -->
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2024 - GiaSuService - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
        </main>
        <!-- page-content" -->
        
    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/bar.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

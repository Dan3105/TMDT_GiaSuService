@using GiaSuService.Configs

<script>
    toastr.options = {
        "closeButton": false,
        "debug": false,
        "newestOnTop": false,
        "progressBar": true,
        "positionClass": "toast-top-right",
        "preventDuplicates": true,
        "onclick": null,
        "showDuration": "300",
        "hideDuration": "1000",
        "timeOut": "2000",
        "extendedTimeOut": "1000",
        "showEasing": "swing",
        "hideEasing": "linear",
        "showMethod": "fadeIn",
        "hideMethod": "fadeOut"
    }
</script>

@if (TempData[AppConfig.MESSAGE_SUCCESS] != null || TempData[AppConfig.MESSAGE_FAIL] != null)
{

    @if (TempData[AppConfig.MESSAGE_SUCCESS] != null)
    {
        <script type="text/javascript">
            toastr["success"]('@TempData[AppConfig.MESSAGE_SUCCESS]')
        </script>
    }
    
    @if (TempData[AppConfig.MESSAGE_FAIL] != null)
    {
        <script type="text/javascript">
            toastr["error"]('@TempData[AppConfig.MESSAGE_FAIL]')
        </script>
    }
}